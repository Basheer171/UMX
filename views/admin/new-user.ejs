<%- include('../layouts/header.ejs') %>

<div class="container mt-4 text-center">
    <h1>Add New User</h1>

    <form action="" method="post" class="mx-auto p-4 border rounded shadow" style="max-width: 400px;">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" name="name" class="form-control" placeholder="Enter Name" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" placeholder="Enter Email" required>
        </div>
        <div class="form-group">
            <label for="mno">Mobile:</label>
            <input type="text" name="mno" class="form-control" placeholder="Enter Mobile" required>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Add User</button>
    </form>

    <% if (typeof message !== 'undefined') { %>
        <p class="text-danger mt-3"><%= message %></p>
    <% } %>

    <a href="/admin/dashboard" class="btn btn-secondary mt-3">Go Back</a>
</div>

<%- include('../layouts/footer.ejs') %>
